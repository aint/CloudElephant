; https://editorconfig.org/

root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

eclint_indent_style = unset
